<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAppearance">@style/UIButtonText</item>
        <item name="android:radius">12dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="TitleText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">65sp</item>
        <item name="android:textColor">#181818</item>
        <item name="android:fontFamily">@font/anton</item>
    </style>

    <style name="HUDHeaderText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#E1E1FF</item>
        <item name="android:fontFamily">@font/anton</item>
    </style>

    <style name="HUDLabelText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#E1E1FF</item>
        <item name="android:fontFamily">@font/anton</item>
    </style>

    <style name="UIButtonText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#181818</item>
        <item name="android:fontFamily">@font/anton</item>
    </style>

    <style name="UILabelText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#181818</item>
        <item name="android:fontFamily">@font/anton</item>
    </style>

    <style name="UIHeaderText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#181818</item>
        <item name="android:fontFamily">@font/anton</item>
    </style>



</resources>
